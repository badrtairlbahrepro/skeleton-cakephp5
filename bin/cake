require dirname(__DIR__) . '/vendor/autoload.php';

// Load core functions to make env() and other helpers available
require dirname(__DIR__) . '/vendor/cakephp/cakephp/src/Core/functions_global.php';

use App\Application;
use Cake\Console\CommandRunner;
use Cake\Routing\Router;

// Initialize Router to avoid uninitialized static property errors
Router::reload();

// Build the runner with an application and root executable directory.
$runner = new CommandRunner(new Application(dirname(__DIR__) . '/config'), 'cake');
exit($runner->run($GLOBALS['argv']));
